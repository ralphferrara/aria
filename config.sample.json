{
	"app": {
		"name": "aria",
		"env": "development",
		"debug": true,
		"port": 8080
	},
	"db": {
		"main": {
			"driver": "postgres",
			"host": "localhost",
			"port": 5432,
			"user": "aria",
			"password": "changeme",
			"database": "aria_db",
			"sslmode": "disable"
		},
		"verify": {
			"driver": "mysql",
			"host": "localhost",
			"port": 3306,
			"user": "verifier",
			"password": "changeme",
			"database": "verify_db"
		}
	},
	"cache": {
		"primary": {
			"backend": "redis",
			"host": "localhost",
			"port": 6379,
			"password": "",
			"db": 0
		},
		"memory": {
			"backend": "memory"
		}
	},
	"storage": {
		"assets": {
			"backend": "s3",
			"bucket": "aria-assets",
			"region": "us-west-2",
			"access_key": "your-access-key",
			"secret_key": "your-secret-key",
			"endpoint": ""
		},
		"uploads": {
			"backend": "local",
			"dir": "./uploads"
		}
	},
	"queue": {
		"main": {
			"backend": "rabbitmq",
			"host": "localhost",
			"port": 5672,
			"user": "guest",
			"password": "guest",
			"vhost": "/"
		},
		"notifications": {
			"backend": "redis",
			"host": "localhost",
			"port": 6379
		}
	},
	"auth": {
		"jwt_secret": "supersecretkey",
		"session_expiry": 3600,
		"token_issuer": "aria"
	},
	"locale": {
		"default": "en-US",
		"supported": ["en-US", "es-ES", "fr-FR"]
	},
	"template": {
		"dir": "./templates",
		"cache": true
	}
}
